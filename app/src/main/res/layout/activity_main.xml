<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FrameLayout for Fragments -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Buttons for Fragment Navigation -->

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
       >




            <ImageButton
                android:id="@+id/fragmentOne"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_home_48"
                android:background="@android:color/transparent"
                android:contentDescription="@string/button1_desc"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:scaleType="center"
                />

            <ImageButton
                android:id="@+id/fragmentTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_circle_notifications_48"
                android:background="@android:color/transparent"
                android:contentDescription="@string/button2_desc"
                android:padding="16dp"
                android:layout_margin="8dp"/>

            <ImageButton
                android:id="@+id/fragmentThree"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/baseline_account_circle_48"
                android:background="@android:color/transparent"
                android:contentDescription="@string/button3_desc"
                android:padding="16dp"
                android:layout_margin="8dp"
                />

       </LinearLayout>

</RelativeLayout>


